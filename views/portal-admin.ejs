<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Portal â€¢ IIS</title>
  <script src="https://cdn.tailwindcss.com"></script>
   <link rel="icon" href="/Images/portal-logo.png">
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500;700&family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <style>
    body { font-family: "Playfair Display", sans-serif; }
  </style>
</head>
<body class="bg-slate-50 min-h-screen">

  <!-- HEADER -->
    <header class="flex items-center justify-between px-6 py-5 bg-white">
    <a href="/" class="flex items-center gap-3">
      <img src="/Images/portal-logo.png" class="w-16 rounded-full border-2 border-blue-600" />
      <h1 class="text-2xl font-bold text-blue-600">IIS Portal - Admin Staff</h1>
    </a>
  </header>

  <main class="px-6 py-8">

    <!-- STUDENTS SECTION -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold text-blue-700 mb-4">Registered Students</h2>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200 shadow-md rounded-lg overflow-hidden">
          <thead class="bg-blue-600 text-white">
            <tr>
              <th class="px-6 py-3 text-left text-sm font-semibold">Name</th>
              <th class="px-6 py-3 text-left text-sm font-semibold">Email / Phone</th>
              <th class="px-6 py-3 text-left text-sm font-semibold">Message / Info</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if(students.length === 0) { %>
              <tr>
                <td colspan="3" class="px-6 py-4 text-center text-gray-500">No students registered yet.</td>
              </tr>
            <% } %>
            <% students.forEach(student => { %>
              <tr class="hover:bg-blue-50 transition">
                <td class="px-6 py-4"><%= student.name %></td>
                <td class="px-6 py-4"><%= student.email %> / <%= student.phone %></td>
                <td class="px-6 py-4"><%= student.text %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </section>

    <!-- TEACHERS SECTION -->
    <section>
      <h2 class="text-2xl font-bold text-blue-700 mb-4">Registered Teachers</h2>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200 shadow-md rounded-lg overflow-hidden">
          <thead class="bg-blue-600 text-white">
            <tr>
              <th class="px-6 py-3 text-left text-sm font-semibold">Name</th>
              <th class="px-6 py-3 text-left text-sm font-semibold">Email / Phone</th>
              <th class="px-6 py-3 text-left text-sm font-semibold">Message / Info</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if(teachers.length === 0) { %>
              <tr>
                <td colspan="3" class="px-6 py-4 text-center text-gray-500">No teachers registered yet.</td>
              </tr>
            <% } %>
            <% teachers.forEach(teacher => { %>
              <tr class="hover:bg-blue-50 transition">
                <td class="px-6 py-4"><%= teacher.name %></td>
                <td class="px-6 py-4"><%= teacher.email %> / <%= teacher.phone %></td>
                <td class="px-6 py-4"><%= teacher.text %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </section>

  </main>

</body>
</html>
