<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>IIS Portal â€¢ Admin Signup</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="icon" href="/Images/portal-logo.png">
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500;700&family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <style>
    body { font-family: "Playfair Display", sans-serif; }
  </style>
</head>
<body class="bg-slate-50">

  <!-- HEADER -->
  <header class="flex flex-col sm:flex-row items-center justify-between gap-4 px-6 py-5 bg-white">
    <a href="/register/admin" class="flex items-center gap-3">
      <img src="/Images/portal-logo.png" alt="Logo" class="w-16 sm:w-20 rounded-full border-2 border-blue-600"/>
      <h1 class="text-2xl font-bold text-blue-600">Admin Signup</h1>
    </a>
  </header>

  <!-- MAIN -->
  <main class="min-h-[calc(100vh-120px)] flex items-center px-4 sm:px-6 py-10">
    <section class="w-full max-w-5xl mx-auto text-center">
      <h2 class="text-3xl font-bold text-blue-600 mb-2">Admin Signup</h2>
      <p class="text-gray-600 mb-10">Fill your details carefully.</p>

      <form action="/createAccount/admin" method="POST" class="bg-white rounded-2xl shadow-lg p-6 sm:p-10">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 text-left">

          <!-- LEFT COLUMN -->
          <div class="flex flex-col gap-6">
            <div>
              <label class="block font-semibold text-blue-600 mb-2 text-lg">Full Name</label>
              <input type="text" name="name" required
                     class="w-full px-4 py-4 rounded-xl border-2 border-slate-200 focus:outline-none focus:border-blue-600 focus:ring-4 focus:ring-blue-100 transition"/>
            </div>

            <div>
              <label class="block font-semibold text-blue-600 mb-2 text-lg">Phone Number</label>
              <input type="tel" name="phone" required
                     class="w-full px-4 py-4 rounded-xl border-2 border-slate-200 focus:outline-none focus:border-blue-600 focus:ring-4 focus:ring-blue-100 transition"/>
            </div>
          </div>

          <!-- RIGHT COLUMN -->
          <div class="flex flex-col gap-6">
            <div>
              <label class="block font-semibold text-blue-600 mb-2 text-lg">Secret code</label>
              <input type="text" name="secret" required
                     class="w-full px-4 py-4 rounded-xl border-2 border-slate-200 focus:outline-none focus:border-blue-600 focus:ring-4 focus:ring-blue-100 transition"/>
            </div>
            <div>
              <label class="block font-semibold text-blue-600 mb-2 text-lg">Password</label>
              <input type="password" name="password" required
                     class="w-full px-4 py-4 rounded-xl border-2 border-slate-200 focus:outline-none focus:border-blue-600 focus:ring-4 focus:ring-blue-100 transition"/>
            </div>

            <!-- BUTTONS IN RIGHT COLUMN -->
            <div class="flex flex-col md:flex-row gap-4 mt-2">
              <button type="submit"
                      class="flex-1 px-6 py-3 rounded-xl bg-gradient-to-r from-blue-600 to-blue-700 text-white font-semibold shadow-md hover:shadow-xl transition">
                Create Account
              </button>
              <a href="/login/admin" class="flex-1">
                <button type="button"
                        class="w-full px-6 py-3 rounded-xl bg-white text-blue-500 font-semibold shadow-md hover:shadow-xl transition">
                  Log-in
                </button>
              </a>
            </div>
          </div>

        </div>

        <!-- ERROR MESSAGE OR HELP LINK -->
        <div class="mt-6">
          <% if (errorMessage) { %>
            <p class="text-red-500 font-semibold text-center"><%= errorMessage %></p>
          <% } else { %>
            <p class="text-center text-gray-600">
              Need help? <a href="/help" class="text-blue-500 underline">-Click here</a>
            </p>
          <% } %>
        </div>

      </form>
    </section>
  </main>

  <!-- KEEP YOUR SCRIPT AS-IS -->
  <script>
const form = document.querySelector("form");

// Helper functions for showing/clearing errors
const showError = (input, message) => {
    let errorEl = input.nextElementSibling;
    if (!errorEl || !errorEl.classList.contains('error-message')) {
        errorEl = document.createElement('p');
        errorEl.className = 'error-message text-red-500 text-sm mt-1';
        input.parentNode.appendChild(errorEl);
    }
    errorEl.textContent = message;
    input.classList.add('border-red-500');
};

const clearError = (input) => {
    const errorEl = input.nextElementSibling;
    if (errorEl && errorEl.classList.contains('error-message')) {
        errorEl.textContent = '';
    }
    input.classList.remove('border-red-500');
};

// Validation functions
const validateName = (name) => /^[A-Za-z\s]{10,50}$/.test(name);
const validatePhone = (phone) => /^\d{10}$/.test(phone);
const validatePassword = (pwd) => /^(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,12}$/.test(pwd);

form.addEventListener("submit", (e) => {
    let valid = true;

    const name = form.name.value.trim();
    const phone = form.phone.value.trim();
    const password = form.password.value;

    // Full Name
    if (!validateName(name)) {
        showError(form.name, "Full Name must be 10-50 letters only.");
        valid = false;
    } else clearError(form.name);

    // Phone Number
    if (!validatePhone(phone)) {
        showError(form.phone, "Phone must be exactly 10 digits.");
        valid = false;
    } else clearError(form.phone);

    // Password
    if (!validatePassword(password)) {
        showError(form.password, "Password 8-12 chars, must include uppercase, lowercase, and a number.");
        valid = false;
    } else clearError(form.password);

    if (!valid) e.preventDefault(); // stop form submission if invalid
});

// Optional: real-time validation as user types
form.querySelectorAll('input').forEach(input => {
    input.addEventListener('input', () => {
        input.dispatchEvent(new Event('blur')); // trigger validation
    });
});
</script>

</body>
</html>
